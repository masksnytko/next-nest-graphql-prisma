{
  "name": "the_business_exchange",
  "private": true,
  "scripts": {
    "next:dev": "npx next dev",
    "next:build": "npx next build",
    "next:start": "npx next start",
    "nest:dev": "npx nest start --watch",
    "nest:build": "npx nest build",
    "nest:start": "node .nest/main",
    "build": "yarn nest:build && yarn codegen && yarn next:build",
    "dev": "yarn nest:dev & yarn next:dev",
    "start": "yarn nest:start & yarn next:start",
    "codegen": "npx graphql-codegen",
    "lint": "next lint"
  },
  "dependencies": {
    "@apollo/client": "^3.5.6",
    "@nestjs/common": "^8.2.4",
    "@nestjs/config": "^1.1.5",
    "@nestjs/core": "^8.2.4",
    "@nestjs/graphql": "^9.1.2",
    "@nestjs/platform-fastify": "^8.2.4",
    "@prisma/client": "^3.7.0",
    "apollo-server": "^3.5.0",
    "apollo-server-fastify": "^3.5.0",
    "class-validator": "^0.13.2",
    "graphql": "^15",
    "graphql-query-complexity": "^0.11.0",
    "graphql-subscriptions": "^2.0.0",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/flow-operations": "2.2.1",
    "@graphql-codegen/flow-resolvers": "2.2.1",
    "@graphql-codegen/import-types-preset": "^2.1.8",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/near-operation-file-preset": "^2.2.2",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-apollo-client-helpers": "^2.1.8",
    "@graphql-codegen/typescript-operations": "2.2.1",
    "@graphql-codegen/typescript-react-apollo": "3.2.2",
    "@graphql-codegen/typescript-resolvers": "2.4.2",
    "@nestjs/cli": "^8.1.6",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.4",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.0.3",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "^17.0.5",
    "@types/react": "17.0.37",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "apollo": "^2.33.9",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "eslint-plugin-nestjs": "^1.2.3",
    "prisma": "^3.7.0",
    "supertest": "^6.1.6",
    "typescript": "4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "server",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "author": "Maks Snytko <maks_snytko@inbox.ru>"
}